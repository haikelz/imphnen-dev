---
import { format } from "date-fns";
import { ArrowLeft } from "lucide-svelte";

import Layout from "./Layout.astro";

interface Props {
  title: string;
  pubDate: Date;
  author: string;
  authorBio: string;
  category: string;
  image: string;
  slug: string;
}

const { title, pubDate, author, authorBio, category, image, slug } =
  Astro.props;
---

<Layout title={`${title} | IMPHNEN Blog`} url="" description="">
  <main class="flex-1">
    <!-- Hero Section -->
    <section class="relative">
      <div class="w-full h-[300px] md:h-[400px] relative overflow-hidden">
        <img
          src={image}
          alt={title}
          class="object-cover w-full h-full absolute inset-0"
        />
        <div
          class="absolute inset-0 bg-black/50 flex items-center justify-center"
        >
          <div class="container text-center text-white space-y-4 max-w-3xl">
            <h1 class="text-2xl md:text-4xl font-bold tracking-tight">
              {title}
            </h1>
            <div class="flex items-center justify-center gap-3 text-sm">
              <span>{category}</span>
              <span>•</span>
              <time datetime={pubDate.toISOString()}
                >{format(pubDate, "MMMM d, yyyy")}</time
              >
              <span>•</span>
              <span>By {author}</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Content Section -->
    <section class="py-12">
      <div class="container">
        <div class="max-w-3xl mx-auto">
          <a
            href="/blog"
            class="inline-flex items-center text-muted-foreground hover:text-foreground mb-8"
          >
            <ArrowLeft class="mr-2 h-4 w-4" />
            Back to all posts
          </a>

          <article class="prose prose-lg dark:prose-invert max-w-none">
            <slot />
          </article>

          <div class="mt-12 pt-8 border-t">
            <h3 class="text-xl font-semibold mb-4">About the author</h3>
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-full bg-muted"></div>
              <div>
                <h4 class="font-medium">{author}</h4>
                <p class="text-muted-foreground">{authorBio}</p>
              </div>
            </div>
          </div>

          <div class="mt-12 pt-8 border-t flex justify-between items-center">
            <a
              href="/blog"
              class="inline-flex items-center text-muted-foreground hover:text-foreground"
            >
              <ArrowLeft class="mr-2 h-4 w-4" />
              Back to all posts
            </a>

            <div class="flex gap-2">
              <button class="p-2 bg-muted rounded-md hover:bg-muted/80"
                >Share</button
              >
              <button class="p-2 bg-muted rounded-md hover:bg-muted/80"
                >Save</button
              >
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
