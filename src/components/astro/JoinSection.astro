---
import { ChevronRight, Facebook, Github, MessageSquare } from "lucide-svelte";
---

<section id="join" class="py-16 relative overflow-hidden">
  <!-- Background decorative elements -->
  <div class="absolute inset-0 bg-linear-to-b from-muted/80 to-muted/30 -z-10">
  </div>

  <!-- Grid pattern overlay -->
  <div
    class="absolute inset-0 bg-grid-pattern bg-[length:30px_30px] opacity-[0.03] pointer-events-none -z-10"
  >
  </div>

  <!-- Gradient orbs -->
  <div
    class="absolute -top-64 -left-64 w-96 h-96 bg-linear-to-br from-primary/20 via-transparent to-transparent rounded-full filter blur-3xl -z-10"
  >
  </div>
  <div
    class="absolute -bottom-64 -right-64 w-96 h-96 bg-linear-to-br from-accent/20 via-transparent to-transparent rounded-full filter blur-3xl -z-10"
  >
  </div>

  <div class="container px-4">
    <div class="relative mx-auto max-w-4xl">
      <!-- Glow effect around the card -->
      <div
        class="absolute -inset-1 bg-linear-to-r from-primary via-secondary to-accent rounded-3xl blur-xl opacity-30"
      >
      </div>

      <!-- Card content -->
      <div
        class="relative bg-card rounded-2xl p-8 md:p-12 border border-border/60 shadow-xl overflow-hidden"
      >
        <!-- Decorative elements -->
        <div
          class="absolute top-0 left-0 w-32 h-32 bg-primary/10 rounded-br-[100px] -z-0"
        >
        </div>
        <div
          class="absolute bottom-0 right-0 w-32 h-32 bg-accent/10 rounded-tl-[100px] -z-0"
        >
        </div>

        <div class="relative z-10">
          <div class="text-center mb-8">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">
              Gabung ke Komunitas Kami
            </h2>
            <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
              Udah siap jadi bagian dari banyak programmer yang malas ngoding
              padahal sebenarnya sepuh? Join IMPHNEN sekarang juga!
            </p>
          </div>

          <div class="grid md:grid-cols-3 gap-6 mt-10">
            <a
              href="https://www.facebook.com/groups/programmerhandal"
              target="_blank"
              rel="noopener noreferrer"
              class="group p-6 bg-linear-to-br from-primary/10 to-purple-500/10 hover:from-primary/20 hover:to-purple-500/20 rounded-xl flex flex-col items-center text-center transition-all duration-300 border border-border/30 hover:border-primary/30"
            >
              <div
                class="w-16 h-16 mb-4 flex items-center justify-center bg-primary/20 rounded-full group-hover:scale-110 transition-transform duration-300"
              >
                <Facebook class="h-8 w-8 text-primary" />
              </div>
              <h3 class="text-lg font-bold mb-2">Facebook Group</h3>

              <ChevronRight
                class="h-5 w-5 text-primary mt-auto transform group-hover:translate-x-1 transition-transform"
              />
            </a>

            <a
              href="https://github.com/IMPHNEN"
              target="_blank"
              rel="noopener noreferrer"
              class="group p-6 bg-linear-to-br from-secondary/10 to-blue-500/10 hover:from-secondary/20 hover:to-blue-500/20 rounded-xl flex flex-col items-center text-center transition-all duration-300 border border-border/30 hover:border-secondary/30"
            >
              <div
                class="w-16 h-16 mb-4 flex items-center justify-center bg-secondary/20 rounded-full group-hover:scale-110 transition-transform duration-300"
              >
                <Github class="h-8 w-8 text-secondary" />
              </div>
              <h3 class="text-lg font-bold mb-2">GitHub Organization</h3>

              <ChevronRight
                class="h-5 w-5 text-secondary mt-auto transform group-hover:translate-x-1 transition-transform"
              />
            </a>

            <a
              href="https://discord.gg/imphnen"
              target="_blank"
              rel="noopener noreferrer"
              class="group p-6 bg-linear-to-br from-accent/10 to-teal-500/10 hover:from-accent/20 hover:to-teal-500/20 rounded-xl flex flex-col items-center text-center transition-all duration-300 border border-border/30 hover:border-accent/30"
            >
              <div
                class="w-16 h-16 mb-4 flex items-center justify-center bg-accent/20 rounded-full group-hover:scale-110 transition-transform duration-300"
              >
                <MessageSquare class="h-8 w-8 text-accent" />
              </div>
              <h3 class="text-lg font-bold mb-2">Discord Server</h3>

              <ChevronRight
                class="h-5 w-5 text-accent mt-auto transform group-hover:translate-x-1 transition-transform"
              />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
