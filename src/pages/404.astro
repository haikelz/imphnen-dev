---
import { ArrowLeft } from "lucide-svelte";
import Layout from "../layouts/Layout.astro";
import { WEBSITE_DESCRIPTION, WEBSITE_URL } from "../utils/constants";
---

<Layout
  title="404 Not Found"
  description={WEBSITE_DESCRIPTION}
  url={WEBSITE_URL}
>
  <main class="flex-1">
    <section class="py-24 md:py-32 relative overflow-hidden">
      <!-- Background pattern and gradient -->
      <div
        class="absolute inset-0 bg-grid-pattern bg-[length:30px_30px] opacity-[0.03] dark:opacity-[0.05] pointer-events-none"
      >
      </div>

      <!-- Decorative gradient orbs -->
      <div
        class="absolute left-1/4 top-1/3 w-64 h-64 bg-linear-to-br from-primary/20 via-transparent to-transparent rounded-full filter blur-3xl"
      >
      </div>
      <div
        class="absolute right-1/4 bottom-1/3 w-64 h-64 bg-linear-to-br from-secondary/20 via-transparent to-transparent rounded-full filter blur-3xl"
      >
      </div>

      <div class="container px-4">
        <div class="max-w-2xl mx-auto">
          <!-- Glow effect -->
          <div
            class="absolute -inset-1 bg-linear-to-r from-primary/20 to-secondary/20 rounded-2xl blur-xl opacity-30"
          >
          </div>

          <div
            class="relative bg-card/80 backdrop-blur-xs rounded-xl border border-border/50 shadow-lg overflow-hidden"
          >
            <div class="p-8 md:p-12 text-center">
              <h1
                class="text-8xl md:text-9xl font-bold bg-linear-to-br from-primary via-secondary to-accent bg-clip-text text-transparent mb-6"
              >
                404
              </h1>

              <h2 class="text-3xl font-bold tracking-tight mb-4">
                Page Not Found
              </h2>
              <p class="text-muted-foreground mb-8 max-w-md mx-auto">
                The page you're looking for doesn't exist. Maybe even the
                laziest programmer couldn't be bothered to create it.
              </p>

              <a
                href="/"
                class="btn-modern btn-modern-primary inline-flex items-center group mx-auto"
              >
                <ArrowLeft
                  class="mr-2 h-4 w-4 transition-transform group-hover:-translate-x-1"
                />
                Back to Homepage
              </a>

              <div class="relative mt-12 max-w-lg mx-auto">
                <div
                  class="absolute -inset-0.5 bg-linear-to-r from-primary/10 to-secondary/10 rounded-lg blur-sm opacity-30"
                >
                </div>
                <div
                  class="relative p-6 rounded-lg bg-muted/50 backdrop-blur-xs border border-border/40"
                >
                  <div
                    class="font-mono text-sm text-muted-foreground text-left"
                  >
                    <p>// When programmers want to be expert coders</p>
                    <p>// But don't want to actually code</p>
                    <p class="mt-4">
                      function findPage() {}
                      <p>
                        &nbsp;&nbsp;if (pageExists) {}
                        <p>&nbsp;&nbsp;&nbsp;&nbsp;return page;</p>
                        <p>&nbsp;&nbsp;</p> else {}
                        <p>
                          &nbsp;&nbsp;&nbsp;&nbsp;return <span
                            class="text-primary font-semibold">404</span
                          >; <span class="text-secondary">// You are here</span>
                        </p>
                        <p>&nbsp;&nbsp;</p>
                      </p>
                      <p></p>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
